pipeline {
    agent any

    triggers {
        pollSCM "H/15 * * * *"
    }


    environment {
        JAVA_HOME="${tool 'JDK-11'}"
    }

    stages {
        stage('Build and Test') {
        steps {
               dir("timetrackerbackend"){
                sh 'java -version'
                sh 'make test'
              }
            }
        }

    }
}