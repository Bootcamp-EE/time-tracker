pipeline {
    agent any

    triggers {
        pollSCM "H/15 * * * *"
    }

    env.JAVA_HOME="${tool 'JDK-11'}"
    env.PATH="${env.JAVA_HOME}/bin:${env.PATH}"

    stages {

        stage('Build and Test') {
        steps {
               dir("timetrackerbackend"){
                sh 'java -version'
                sh 'make test'
              }
            }
        }

    }
}